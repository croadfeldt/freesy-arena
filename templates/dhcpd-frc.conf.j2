# Custom DHCP Configuration for FRC Teams

authoritative;

# DHCP options for each subnet
{% for config in active_configs %}
# Subnet configuration for VLAN {{ config.id }} ({{ config.name }})
subnet {{ config.subnet.subnet_cidr | ansible.utils.ipaddr('network') }} netmask {{ config.subnet.netmask }} {
    option routers {{ config.subnet.gateway }};
    option subnet-mask {{ config.subnet.netmask }};
    option broadcast-address {{ config.subnet.broadcast_ip }};
    range {{ config.subnet.first_assignable_ip }} {{ config.subnet.last_assignable_ip }};
}
{% endfor %}
